<h1>Sign Up</h1>

<%= form_for @user, url: signup_path, method: "post" do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  <br>
  <%= f.submit "Sign Up" %>

<% end %>

Or <%= link_to "Log In", login_path %>